<!-- res/drawable/button_custom.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- DEFAULT STATE -->
    <item>
        <layer-list>
            <!-- Background with rounded corners -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#F1F1F1"/> <!-- Gray fill -->
                    <corners android:radius="24dp"/> <!-- Adjust radius here -->
                    <stroke android:width="1dp" android:color="#000000"/> <!-- Black border -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- PRESSED STATE -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#E0E0E0"/> <!-- Darker gray when pressed -->
                    <corners android:radius="24dp"/>
                    <stroke android:width="1dp" android:color="#000000"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>