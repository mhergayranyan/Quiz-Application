<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- App Base Theme -->
    <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="BottomNavText">
        <item name="android:textSize">12sp</item>
        <item name="itemIconSize">24dp</item> <!-- Default is 24dp but good to specify -->
    </style>

    <style name="BottomNavText.Active" parent="BottomNavText">
        <item name="android:textSize">13sp</item>
        <item name="itemIconSize">24dp</item> <!-- Default is 24dp but good to specify --><!-- Slightly larger when active -->
    </style>

    <style name="BottomNavText.Inactive" parent="BottomNavText">
        <item name="android:textSize">12sp</item>
        <item name="itemIconSize">24dp</item> <!-- Default is 24dp but good to specify -->
    </style>


    <style name="CampusAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/background_dark</item>
        <item name="colorOnPrimary">@color/text_light</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/text_light</item>

        <!-- Background -->
        <item name="android:windowBackground">@drawable/bg_gradient</item>

        <!-- Button styles -->


        <!-- Other theme items -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- No ActionBar variant -->
    <style name="CampusAppTheme.NoActionBar"
        android:background="@drawable/bg_gradient">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <!-- Add inside <resources> tag -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight"
        android:background="@color/black">
        <!-- Add this line -->
    </style>

    <style name="ShapeAppearance.MediumRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>


    <style name="QuizOptionButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="cornerRadius">12dp</item>
    </style>



    <style name="WhiteButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NoElevationButtonStyle" parent="">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ForceWhiteButtonStyle" parent="">
        <item name="android:stateListAnimator">@null</item>
        <item name="materialButtonStyle">@style/ForceWhiteButtonReal</item>
    </style>

    <style name="ForceWhiteButtonReal" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="rippleColor">#DDDDDD</item>
    </style>

    <style name="WhiteMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="rippleColor">#DDDDDD</item>
        <item name="strokeColor">@android:color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Theme.TerraTrial" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:statusBarColor">@android:color/black</item>
        <!-- App-wide theme settings -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <!-- Add other app theme items -->
    </style>


</resources>
