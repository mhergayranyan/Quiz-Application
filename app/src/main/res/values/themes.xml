<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">8dp</item>
        <item name="itemIconTint">@drawable/bottom_nav_colors</item>
        <item name="itemTextColor">@drawable/bottom_nav_colors</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="itemTextAppearanceActive">@style/BottomNavText.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavText.Inactive</item>
    </style>

    <style name="Theme.TerraTrial.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Set status bar background to black -->
        <item name="android:statusBarColor">@android:color/black</item>

        <!-- Background of entire screen -->
        <item name="android:windowBackground">@android:color/black</item>

        <!-- Android 12+ splash settings -->
        <item name="android:windowSplashScreenBackground">@android:color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Avoid jumping theme after splash -->
        <item name="postSplashScreenTheme">@style/Theme.TerraTrial</item>
    </style>




</resources>